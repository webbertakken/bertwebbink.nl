{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "prebuild": {
      "dependsOn": ["^prebuild"]
    },
    "build": {
      "env": ["SANITY_API_READ_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build", "^start"],
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["^deploy"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "//#format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"],
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["^coverage"],
      "outputs": ["coverage/**"]
    },
    "extract-types": {
      "dependsOn": ["^extract-types"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
